<% include partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Hell</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/hells" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="image url"
          />
        </div>
        <div class="form-group">
          <button class="btn bnt-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/hells">Go Back</a>
    </div>
  </div>
</div>
